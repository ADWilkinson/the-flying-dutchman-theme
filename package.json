{
    "name": "the-flying-dutchman-theme",
    "displayName": "The Flying Dutchman Theme",
    "description": "A nautical dark theme collection inspired by the Flying Dutchman ghost ship. Features three variants: Standard (balanced), High Contrast (accessibility-focused), and Classic (softer colors). Deep ocean blues, aged brass accents, and sea-weathered colors designed for comfortable long coding sessions. Includes comprehensive syntax highlighting for JavaScript, TypeScript, Python, React, and more. Also available for popular terminals.",
    "version": "1.3.0",
    "publisher": "DavyJones",
    "icon": "icon.png",
    "author": {
        "name": "Andrew Wilkinson",
        "url": "https://github.com/ADWilkinson"
    },
    "license": "MIT",
    "keywords": [
        "theme",
        "dark theme",
        "color theme",
        "theme variants",
        "theme collection",
        "syntax highlighting",
        "nautical",
        "ocean",
        "maritime",
        "sea",
        "sailing",
        "ship",
        "flying dutchman",
        "pirate",
        "blue theme",
        "accessibility",
        "high contrast",
        "classic theme",
        "readability",
        "professional",
        "terminal theme",
        "multi-platform",
        "typescript",
        "javascript",
        "react",
        "python",
        "css",
        "html",
        "json",
        "markdown",
        "productivity",
        "multiple themes",
        "theme suite"
    ],
    "homepage": "https://github.com/ADWilkinson/the-flying-dutchman-theme",
    "repository": {
        "type": "git",
        "url": "https://github.com/ADWilkinson/the-flying-dutchman-theme.git"
    },
    "bugs": {
        "url": "https://github.com/ADWilkinson/the-flying-dutchman-theme/issues"
    },
    "galleryBanner": {
        "color": "#0b1929",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "The Flying Dutchman",
                "uiTheme": "vs-dark",
                "path": "./themes/flying-dutchman-color-theme.json"
            },
            {
                "label": "The Flying Dutchman High Contrast",
                "uiTheme": "vs-dark",
                "path": "./themes/flying-dutchman-high-contrast.json"
            },
            {
                "label": "The Flying Dutchman Classic",
                "uiTheme": "vs-dark",
                "path": "./themes/flying-dutchman-classic.json"
            }
        ],
        "configuration": {
            "title": "The Flying Dutchman Theme",
            "properties": {
                "flyingDutchmanTheme.preferredVariant": {
                    "type": "string",
                    "default": "standard",
                    "enum": ["standard", "high-contrast", "classic"],
                    "enumDescriptions": [
                        "Balanced nautical colors for everyday coding",
                        "Enhanced contrast for better accessibility",
                        "Softer, traditional nautical palette"
                    ],
                    "description": "Choose your preferred Flying Dutchman theme variant"
                },
                "flyingDutchmanTheme.enableSemanticHighlighting": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable enhanced semantic highlighting for supported languages"
                },
                "flyingDutchmanTheme.terminalIntegration": {
                    "type": "boolean",
                    "default": true,
                    "description": "Apply theme colors to integrated terminal"
                }
            }
        },
        "commands": [
            {
                "command": "flyingDutchmanTheme.switchVariant",
                "title": "Switch Theme Variant",
                "category": "Flying Dutchman"
            },
            {
                "command": "flyingDutchmanTheme.showInfo",
                "title": "Show Theme Information",
                "category": "Flying Dutchman"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "echo 'No compilation needed for theme extension'",
        "package": "vsce package",
        "publish": "vsce publish",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "devDependencies": {
        "@vscode/vsce": "^2.22.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.16",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    }
}